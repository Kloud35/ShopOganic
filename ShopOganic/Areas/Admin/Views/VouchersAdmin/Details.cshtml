@model ShopOganicAPI.Models.Voucher

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Voucher</h4>
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item" href="#">Quản lý hệ thống</span>
            <a class="breadcrumb-item active" href="#">Quản lý voucher</a>
        </nav>
    </div>
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VoucherName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PercentDiscount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PercentDiscount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeEnd)
        </dd>
        <div class="m-b-10">
            <select asp-for="Status" class="custom-select" style="min-width: 200px;" asp-items="ViewBag.lsTrangThai">
