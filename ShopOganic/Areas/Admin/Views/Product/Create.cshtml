@model ShopOganicAPI.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="page-header no-gutters has-tab">
		
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link active" data-toggle="tab" href="#product-edit-basic">THÔNG TIN SẢN PHẨM</a>
			</li>
		</ul>
	</div>
	<div class="tab-content m-t-15">
		<div class="tab-pane fade show active" id="product-edit-basic">
			<div class="card">
				<div class="card-body">
					<div class="form-group">
						<label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
						<input type="text" class="form-control" asp-for="ProductName">
						<span asp-validation-for="ProductName" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label class="font-weight-semibold">Thể loại sản phẩm</label>
						@Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>) ViewBag.lstCate,"Chọn thể loại", new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label class="font-weight-semibold" for="productColors">Giá</label>
						<input type="text" class="form-control" asp-for="Price">
						<span asp-validation-for="Price" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label class="font-weight-semibold" for="productFit">Số lượng tồn</label>
						<input type="text" class="form-control" asp-for="Quantity">
						<span asp-validation-for="Quantity" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label class="font-weight-semibold" for="productFit">Ngày nhập</label>
						<input asp-for="CreatedDate" class="form-control" />
						<span asp-validation-for="CreatedDate" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
						<input name="fThumb" type="file" class="form-control-file" asp-for="ImageUrl" />
						<span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="font-weight-semibold" for="productFit">Mô tả</label>
						<input type="text" class="form-control" asp-for="Description">
					</div>
					@*<div class="form-group">
						<div class="form-group d-flex align-items-center">
							<div class="checkbox">
								<label class="font-weight-semibold" for="productFit">Trạng thái</label>
								<br />
								<input type="radio" asp-for="Status" value="1" checked /> Còn hàng
								<input type="radio" asp-for="Status" value="0" /> Hết hàng<br />
							</div>
						</div>
					</div>*@

				</div>
			</div>
		</div>
		
		
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</form>


