@model IEnumerable<ShopOganicAPI.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item" href="#">Quản lý hệ thống</span>
            <a class="breadcrumb-item active" href="#">Quản lý bài sản phẩm</a>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30 text-right">
            <div class="col-lg">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm mới</span></a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table text-center" >
                <thead>
                    <tr style="background-color:aquamarine">
                        <th>Tên</th>
                        <th>Ảnh</th>
                        <th>Giá</th>
                        <th>Số lượng còn</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>
                                    <img width="90" height="90" src="~/images/news/@item.ImageUrl" />
                                </td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
@*                                <td>@item.CreatedDate</td>
*@                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Còn hàng</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Hết hàng</div>
                                        </div>
                                    }
                                </td>
                              
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID">Chi tiết</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductID">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger m-r-5" onclick="return confirm('Xác nhận xóa tin tức này?');" )>Delete</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="PostAdmin" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>

