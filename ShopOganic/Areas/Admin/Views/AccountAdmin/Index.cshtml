@model IEnumerable<ShopOganicAPI.Models.Account>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<span class="breadcrumb-item" href="#">Quản lý hệ thống</span>
			<a class="breadcrumb-item active" href="#">Quản lý tài khoản</a>
		</nav>
	</div>
</div>
<div class="row m-b-30">
	<div class="col-lg text-right">
		<a class="btn btn-primary" asp-area="Admin" asp-controller="AccountAdmin" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm mới</span></a>
	</div>

</div>
<div class="table-responsive">
	<div class="card-body">
		<table class="table table-hover e-commerce-table " style="text-align:center">
			<thead >
				<tr style="background-color:aquamarine">

					<th>
						@Html.DisplayNameFor(model => model.AccountName)
					</th>
					<th>
						@Html.DisplayName("Picture")
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Email)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.FullName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.PhoneNumber)
					</th>

					<th>
						@Html.DisplayName("Active")
					</th>

					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>

						<td>
							@Html.DisplayFor(modelItem => item.AccountName)
						</td>
						<td>
							<img src="/images/@item.ImageUrl" height="100" width="100"></img>
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Email)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FullName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.PhoneNumber)
						</td>

						<td>
							@if (item.IsActive == true)
							{
								<div class="form-check form-switch">
									<a onclick="changeStatus('@item.AccountID');" onclick="return confirm('Xác nhận thay đổi này?');">
										<input class="form-check-input" type="checkbox" role="switch" id="switchSizeLarge-@item.AccountID" checked />
									</a>
								</div>
							}
							else
							{
								<div class="form-check form-switch">
									<a  onclick="changeStatus('@item.AccountID');" onclick="return confirm('Xác nhận thay đổi này?');">
										<input class="form-check-input" type="checkbox" role="switch" id="switchSizeLarge-@item.AccountID" />
									</a>
								</div>
							}

						</td>
						<td>
@*							<a asp-action="Change" asp-route-id="@item.AccountID" class="btn btn-info m-r-5" onclick="return confirm('Xác nhận thay đổi này?');">Status</a>
*@							<a asp-action="Edit" asp-route-id="@item.AccountID" class="btn btn-info m-r-5">Edit</a> 
							<a asp-action="Details" asp-route-id="@item.AccountID" class="btn btn-warning m-r-5">Details</a> 
@*							<a asp-action="Delete" asp-route-id="@item.AccountID" class="btn btn-danger m-r-5" onclick="return confirm('Xác nhận xóa Account này?');" )>Delete</a>
*@						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


<script src="~/js/change_account_status.js" asp-append-version="true"></script>